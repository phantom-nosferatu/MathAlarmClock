<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/alarmcardview"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:textColor="@color/card_time"
            android:textSize="30sp"
            android:fontFamily="@font/roboto_light"
            android:id="@+id/card_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_time" />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_gravity="end"
            android:checked="true"
            android:theme="@style/SwitchTheme"
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20sp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/card_color_desc"
            android:id="@+id/card_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_desc" />


    </LinearLayout>
</androidx.cardview.widget.CardView>